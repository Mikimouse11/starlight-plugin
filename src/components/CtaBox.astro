---
export interface Props {
  message?: string;
  buttonText?: string;
  buttonLink?: string;
}

// Destructure the props and provide default placeholder values
const { 
  message = "Placeholder CTA message", 
  buttonText = "Click me", 
  buttonLink = "#" 
} = Astro.props;
---

<div class="cta-box">
  <p>{message}</p>
  <a href={buttonLink} class="cta-button">{buttonText}</a>
</div>

<style>
  .cta-box {
    padding: 20px;
    background-color: #f9f9f9;
    border: 1px solid #ddd;
    text-align: center;
    border-radius: 8px;
  }
  .cta-box p {
    margin: 0;
    font-size: 1.2rem;
    margin-bottom: 10px;
  }
  .cta-button {
    display: inline-block;
    padding: 10px 20px;
    background-color: #007acc;
    color: #fff;
    text-decoration: none;
    border-radius: 4px;
  }
  .cta-button:hover {
    background-color: #005fa3;
  }
</style> 